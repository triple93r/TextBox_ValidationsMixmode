@model WebApplication1.Models.Employee

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="eName" class="control-label"></label>
                <input asp-for="eName" class="form-control" />
                <span asp-validation-for="eName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emptype" class="control-label"></label>
                <input asp-for="Emptype" class="form-control" />
                <span asp-validation-for="Emptype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="btnSubmit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

        $(document).ready(function () {
            console.log("ready!");
            debugger;
            var ename;

            $("#eName").focusout(function () {
                ValidatePFDdetails();
            });
            function ValidatePFDdetails() {
                ename = $('#eName').val();
                eml = $('#Email').val();
                empid = $('#EmployeeId').val();
                emptype = $('#Emptype').val();

                if (ename == "") 
                {
                    $('#eName').next("label").remove();
                    $('#eName').after('<label class="error mt-2 text-danger">Please provide a Name</label>');
                    $("#eName").focus();
                    count = 1;
                    return false;
                } else {
                    $('#eName').next("label").remove();
                }
                if (ename == "") {
                    $('#Email').next("label").remove();
                    $('#Email').after('<label class="error mt-2 text-danger">Please provide an email</label>');
                    $("#Email").focus();
                    count = 1;
                    return false;
                } else {
                    $('#Email').next("label").remove();
                }
                if (ename == "") {
                    $('#EmployeeId').next("label").remove();
                    $('#EmployeeId').after('<label class="error mt-2 text-danger">Please provide an employee ID</label>');
                    $("#EmployeeId").focus();
                    count = 1;
                    return false;
                } else {
                    $('#EmployeeId').next("label").remove();
                }
                if (ename == "") {
                    $('#Emptype').next("label").remove();
                    $('#Emptype').after('<label class="error mt-2 text-danger">Please provide an employee Type</label>');
                    $("#Emptype").focus();
                    count = 1;
                    return false;
                } else {
                    $('#Emptype').next("label").remove();
                }
            }
        });
    </script>
    
}
